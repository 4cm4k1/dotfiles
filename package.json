{
  "name": "dotfiles",
  "version": "1.0.0",
  "private": true,
  "description": "Quick, idempotent arbitrary OS configuration utility â€“ made with Dotbot",
  "bugs": "https://github.com/4cm4k1/dotfiles/issues",
  "repository": "https://github.com/4cm4k1/dotfiles",
