  "scripts": {
    "bundle": "brew bundle dump --force --global",
    "bundle:add": "git add files/Brewfile",
    "decrypt": "blackbox_postdeploy",
    "install": "./files/install",
    "postinstall": "./files/install",
    "prettier": "prettier {*,**/*}.{js,json,md,yaml,yml} --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn bundle && yarn bundle:add && pretty-quick --staged"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^2.4.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.0"
  },
  "renovate-config": {
    "assignees": [
      "4cm4k1"
    ],
    "extends": [
      "config:base",
      ":pinAllExceptPeerDependencies"
    ],
    "labels": [
      "renovate"
    ]
  }
}
